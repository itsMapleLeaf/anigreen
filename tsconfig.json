{
  "extends": "@itsmapleleaf/configs/tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "exclude": ["**/node_modules/**", "**/build/**", "**/.cache/**"],
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.cjs"]
}
